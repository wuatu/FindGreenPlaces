<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".SetDescripcionAtractivoTuristico">

    <TextView
        android:id="@+id/textViewTituloAT3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp"
        android:text="Titulo"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTituloDescripcionAnteriorAT"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5px"
            android:layout_weight="1"
            android:text="Descripción anterior"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textViewDescripcionAnteriorAT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5px"
            android:layout_weight="1"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:text="Descripción..."
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTituloNuevaDescripcionAT"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5px"
            android:layout_weight="1"
            android:text="Nueva Descripción"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textViewNuevaDescripcionAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_weight="1"
            android:hint="Descripción"
            android:inputType="textCapSentences|textMultiLine"
            android:text="Descripción..."
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />


    </LinearLayout>

    <Button
        android:id="@+id/buttonEnviarDescripcion"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Actualizar Descripción"
        android:textAllCaps="true" />

</LinearLayout>

