<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_margin="5sp"
    android:orientation="vertical"

    tools:context=".AgregarAtractivoTuristico">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:context=".MainActivity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/contenedorAddAtractivoT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonSubirImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subir Imagen" />
            <ImageView
                android:id="@+id/mostrarImagen"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

            <EditText
                android:id="@+id/editTextNombre"
                style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="#43a047"
                app:backgroundTint="#43a047" />

            <EditText
                android:id="@+id/editTextCiudad"
                style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ciudad"
                android:inputType="textPersonName"
                android:textColor="#43a047"
                app:backgroundTint="#43a047" />

            <EditText
                android:id="@+id/editTextComuna"
                style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Comuna"
                android:inputType="textPersonName"
                android:textColor="#43a047"
                app:backgroundTint="#43a047" />

            <EditText
                android:id="@+id/editTextDescripcion"
                style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Descripcion"
                android:inputType="textMultiLine"
                android:textColor="#43a047" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextCategoria"
                    style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
                    android:layout_width="283dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Categoria"
                    android:inputType="textPersonName"
                    android:textColor="#43a047"
                    app:backgroundTint="#43a047" />

                <Button
                    android:id="@+id/buttonaddCategoria"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#43a047"
                    android:text="AÃ±adir" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/categoriasTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="20sp"
                    android:text="Categorias"
                    android:textColor="#43a047"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorCategorias"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.cunoraz.tagview.TagView
                    xmlns:tagview="http://schemas.android.com/apk/res-auto"
                    android:gravity="center_horizontal"
                    android:id="@+id/tag_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    tagview:lineMargin="5dp"
                    tagview:tagMargin="5dp"
                    tagview:textPaddingLeft="8dp"
                    tagview:textPaddingTop="5dp"
                    tagview:textPaddingRight="8dp"
                    tagview:textPaddingBottom="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorBotonesAC"
                android:layout_width="295dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="20sp">

                <Button
                    android:id="@+id/buttonCancelar"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="Cancelar" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />

                <Button
                    android:id="@+id/buttonAceptar"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="Aceptar" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>